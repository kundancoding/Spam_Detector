{
  "manifest_version": 3,
  "name": "PhishGuard",
  "description": "AI-based phishing message detector with spam email tracking.",
  "version": "1.1",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:8000/"]
}